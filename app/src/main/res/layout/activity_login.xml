<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity"
    android:background="@color/skyblue">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tekslogin"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="100dp"
        android:text="Sign In"
        android:fontFamily="@font/poppins_bold"
        android:textSize="20sp"
        android:textColor="@color/white"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tekslogin"
        android:id="@+id/teksdua"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="24dp"
        android:text="Welcome back in our application"
        android:fontFamily="@font/poppins_regular"
        android:textSize="12sp"
        android:textColor="@color/white"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/layout1"
        android:layout_below="@id/teksdua"
        android:padding="20dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/teksemail"
            android:layout_marginTop="40dp"
            android:text="Email Address"
            android:fontFamily="@font/poppins_medium"
            android:textSize="12sp"
            android:textColor="@color/white"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:id="@+id/edt_email"
            android:paddingLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_shape"
            android:hint="Email Address "
            android:backgroundTint="@color/white"
            android:fontFamily="@font/poppins_regular"
            android:textSize="12sp"
            android:inputType="textEmailAddress" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tekspassword"
            android:layout_marginTop="40dp"
            android:text="Password"
            android:fontFamily="@font/poppins_medium"
            android:textSize="12sp"
            android:textColor="@color/white"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:id="@+id/edt_password"
            android:paddingLeft="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/button_shape"
            android:hint="Password"
            android:backgroundTint="@color/white"
            android:fontFamily="@font/poppins_regular"
            android:textSize="12sp"
            android:inputType="textVisiblePassword" />
    </LinearLayout>

    <Button
        android:id="@+id/teksforgot"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/layout1"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="250dp"
        android:fontFamily="@font/poppins_medium"
        android:text="Forgot Password?"
        android:textColor="@color/white"
        android:backgroundTint="@color/skyblue"
        android:textSize="12sp" />
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/teksforgot"
        android:width="230dp"
        android:height="53dp"
        android:id="@+id/buttonlogin"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:text="Sign In"
        android:textColor="@color/white"
        android:background="@drawable/button_shape"
        android:fontFamily="@font/poppins_semibold"
        android:textSize="14sp"/>
    <Button
        android:id="@+id/teksregister"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/buttonlogin"
        android:layout_marginTop="22dp"
        android:layout_centerHorizontal="true"
        android:fontFamily="@font/poppins_medium"
        android:text="Not registered yet? Create an Account"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:backgroundTint="@color/skyblue"/>
</RelativeLayout>