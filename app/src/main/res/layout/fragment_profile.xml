<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.profile.ProfileFragment"
    android:background="@color/white">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="50dp">

                <ImageView
                    android:id="@+id/imgProfile"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:srcCompat="@drawable/testgambar"
                    />
                <TextView
                    android:id="@+id/tvNama"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    tools:text="Name"
                    android:layout_marginTop="30dp"
                    android:fontFamily="@font/poppins_bold"
                    android:textSize="20sp"
                    app:layout_constraintEnd_toEndOf="@+id/imgProfile"
                    app:layout_constraintStart_toStartOf="@+id/imgProfile"
                    app:layout_constraintTop_toBottomOf="@+id/imgProfile" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@id/tvNama">
                    
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/settingsAcc"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:text="@string/account_settings"
                        android:textAlignment="viewStart"
                        android:layout_marginStart="32dp"
                        android:layout_marginEnd="32dp"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_marginBottom="10dp"
                        android:drawableStart="@drawable/baseline_account_box_24"
                        android:drawablePadding="20dp"
                        android:textSize="12sp"
                        android:background="@drawable/button_shape"
                        android:textColor="@color/white"
                        android:paddingStart="20dp"/>
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/settingsApp"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:text="@string/app_settings"
                        android:textAlignment="viewStart"
                        android:layout_marginStart="32dp"
                        android:layout_marginEnd="32dp"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_marginBottom="10dp"
                        android:drawableStart="@drawable/baseline_settings_24"
                        android:drawablePadding="20dp"
                        android:textSize="12sp"
                        android:background="@drawable/button_shape"
                        android:textColor="@color/white"
                        android:paddingStart="20dp"/>
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/aboutUs"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:text="@string/about_us"
                        android:textAlignment="viewStart"
                        android:layout_marginStart="32dp"
                        android:layout_marginEnd="32dp"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_marginBottom="10dp"
                        android:drawableStart="@drawable/baseline_info_24"
                        android:drawablePadding="20dp"
                        android:textSize="12sp"
                        android:background="@drawable/button_shape"
                        android:textColor="@color/white"
                        android:paddingStart="20dp"/>
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/logOut"
                        android:layout_width="match_parent"
                        android:layout_height="60dp"
                        android:text="@string/log_out"
                        android:textAlignment="viewStart"
                        android:layout_marginStart="32dp"
                        android:layout_marginEnd="32dp"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/poppins_medium"
                        android:layout_marginBottom="10dp"
                        android:drawableStart="@drawable/baseline_logout_24"
                        android:drawablePadding="20dp"
                        android:textSize="12sp"
                        android:background="@drawable/button_shape"
                        android:textColor="@color/white"
                        android:paddingStart="20dp"/>
                </LinearLayout>
            </androidx.constraintlayout.widget.ConstraintLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>